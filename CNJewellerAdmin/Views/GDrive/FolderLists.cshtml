@model IEnumerable<CNJewellerAdmin.Models.DDLOptions>
@{
    ViewData["Title"] = "FolderLists";
}

<style type="text/css">
    .inbox-rightbar {
        margin: 0px !important;
        border-left: 0px !important;
        padding: 1.5rem 0 1.5rem 25px;
    }
</style>

@if (Model.Count() > 0)
{
    <div id="wrapper">
        <div class="content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">UBold</a></li>
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Apps</a></li>
                                    <li class="breadcrumb-item active">File Manager</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Drive Manager</h4>
                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">

                    <!-- Right Sidebar -->
                    <div class="col-12">
                        <div class="card-box">

                            <div class="inbox-rightbar">
                                <div class="mt-3">
                                    <div class="row mx-n1 no-gutters">


                                        @foreach (var item in Model)
                                        {
                                            <div class="col-xl-3 col-lg-6">
                                                <div class="card m-1 shadow-none border">
                                                    <div class="p-2">
                                                        <div class="row align-items-center">
                                                            <div class="col-auto">
                                                                <div class="avatar-lg">
                                                                    <span class="avatar-title bg-light text-secondary rounded">
                                                                        <i class="fas fa-folder fa-fw fa-3x"></i>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <div class="col pl-0 ">
                                                                <button class="font-weight-medium" id="getFolderData" data-id="@item.Id" style="border:none;background:none;color:#949292">@item.Name</button>
                                                                <p class="mb-0 font-13">@item.Size</p>
                                                            </div>
                                                        </div> <!-- end row -->
                                                    </div> <!-- end .p-2-->
                                                </div> <!-- end col -->
                                            </div> <!-- end col-->
                                        }
                                    </div> <!-- end row-->
                                </div> <!-- end .mt-3-->
                            </div>
                            <!-- end inbox-rightbar-->

                            <div class="clearfix"></div>
                        </div> <!-- end card-box -->

                    </div> <!-- end Col -->
                </div><!-- End row -->

            </div> <!-- container -->

        </div>
    </div>
}
@section Scripts{
    <script type="text/javascript">
        $(document).on('click', '#getFolderData', function () {
            var folderId = $(this).attr('data-id');
            var url = "/GDrive/GetContainsInFolder?folderId=" + folderId;
            window.location.href = url;
        });

        $(document).on('click', '.deleteRow', function () {
            debugger;
            var shareId = $(this).attr('data-id');
            $(this).closest('tr').remove();
        });
    </script>
}
